.panel.panel-settings(ng-init="fetchSettingsData(subPageName.get())")
    .row
        .col-lg-2.col-md-2.col-sm-3.col-xs-5.secondary-menu
            ul.nav
                li.header Application
                li.toggleable.active(ng-class="toggleActive('profile')" ng-click="fetchSettingsData('profile')")
                    i.fa.fa-fw.fa-user.chart-icon
                    | Profile
                li.toggleable(ng-class="toggleActive('dashboard')" ng-click="fetchSettingsData('dashboard')")
                    i.fa.fa-fw.fa-th-large.chart-icon
                    | Dashboard
                li.header(ng-show="getAuthenticatedUser().role === 'admin'") Administration
                li.toggleable(ng-show="getAuthenticatedUser().role === 'admin'" ng-class="toggleActive('users')" ng-click="fetchSettingsData('users')")
                    i.fa.fa-fw.fa-users.chart-icon
                    | Users
                li.toggleable(ng-show="getAuthenticatedUser().role === 'admin'" ng-class="toggleActive('projects')" ng-click="fetchSettingsData('projects')")
                    i.fa.fa-fw.fa-bookmark.chart-icon
                    | Projects
                li.toggleable(ng-show="getAuthenticatedUser().role === 'admin'" ng-class="toggleActive('logs')" ng-click="fetchSettingsData('logs')")
                    i.fa.fa-fw.fa-file-text.chart-icon
                    | Logs
        .col-lg-10.col-md-4.col-sm-9.col-xs-7
            form(role="form")
                div(ng-include="general.template.url")